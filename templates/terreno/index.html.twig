{% block body %}
<div class="wrapper">
 {{ include('be-layout/preloader.html', sandboxed = true) }}

  {{ include('be-layout/navbar.html', sandboxed = true) }}
  
  {{ include('be-layout/sidebar.html', sandboxed = true) }}
  

<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Tabla Terrenos</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Terreno</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                {# <h3 class="card-title">Tabla de Terrenos</h3> #}
                <a class="btn btn-app" href="{{ path('terreno_new') }}" style="margin: 0px;">
                  <i class="fas fa-edit"></i>
                  Crear Terreno
                </a>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                  <thead>
                        <tr>
                            <th>Acciones</th>
                            <th>Id</th>
                            <th>Nombre</th>
                            <th>Dirección</th>
                            <th>Localidad</th>
                            <th>Municipio</th>
                            <th>Provincia</th>
                            <th>Region</th>
                            <th>Pais Origen</th>
                            <th>Datos_sigpac</th>
                            <th>Localizacion_mapa</th>
                            <th>Superficie_finca</th>
                            <th>Superficie_cultivo</th>
                            <th>Manejo_cultivo</th>
                            <th>Tipo_cultivos</th>
                            <th>Observaciones</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                  <tbody>
        {% for terreno in terrenos %}
            <tr>
                <td>
                  <div class="btn-group-vertical w-100">
                    <a class="btn btn-default" href="{{ path('terreno_show', {'id': terreno.id}) }}">Ver</a>
                    <a class="btn btn-default" href="{{ path('terreno_edit', {'id': terreno.id}) }}">Editar</a>
                  </div>
                </td>
                <td>{{ terreno.id }}</td>
                <td>{{ terreno.nombre }}</td>
                <td>{{ terreno.direccion }}</td>
                <td>{{ terreno.localidad }}</td>
                <td>{{ terreno.municipio }}</td>
                <td>{{ terreno.provincia }}</td>
                <td>{{ terreno.region }}</td>
                <td>{{ terreno.paisOrigen }}</td>
                <td>{{ terreno.datosSigpac }}</td>
                <td>{{ terreno.localizacionMapa }}</td>
                <td>{{ terreno.superficieFinca }}</td>
                <td>{{ terreno.superficieCultivo }}</td>
                <td>{{ terreno.manejoCultivo }}</td>
                <td>{{ terreno.tipoCultivos }}</td>
                <td>{{ terreno.observaciones }}</td>
                <td>
                  <div class="btn-group-vertical w-100">
                    <a class="btn btn-default" href="{{ path('terreno_show', {'id': terreno.id}) }}">Ver</a>
                    <a class="btn btn-default" href="{{ path('terreno_edit', {'id': terreno.id}) }}">Editar</a>
                  </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Sin datos</td>
            </tr>
        {% endfor %}
        </tbody>
                  <tfoot>
                    <tr>
                        <th>Acciones</th>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>Dirección</th>
                        <th>Localidad</th>
                        <th>Municipio</th>
                        <th>Provincia</th>
                        <th>Region</th>
                        <th>Pais Origen</th>
                        <th>Datos_sigpac</th>
                        <th>Localizacion_mapa</th>
                        <th>Superficie_finca</th>
                        <th>Superficie_cultivo</th>
                        <th>Manejo_cultivo</th>
                        <th>Tipo_cultivos</th>
                        <th>Observaciones</th>
                        <th>Acciones</th>
                    </tr>  
                  </tfoot>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  
  
  {{ include('be-layout/footer.html', sandboxed = true) }}

