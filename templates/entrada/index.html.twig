
{% extends 'backend-base.html.twig' %}

{% block title %}Entradas{% endblock %}

{% block stylesheets %}
      {{ include('be-layout/stylesheet-tabla.html', sandboxed = true) }}
{% endblock %}

{% block body %}
<div class="wrapper">
 {{ include('be-layout/preloader.html', sandboxed = true) }}

  {{ include('be-layout/navbar.html', sandboxed = true) }}
  
  {{ include('be-layout/sidebar.html', sandboxed = true) }}
  

<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Tabla Entradas</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Imagen</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                {# <h3 class="card-title">Tabla de Entradas</h3> #}
                <a class="btn btn-app" href="{{ path('entrada_new') }}" style="margin: 0px;">
                  <i class="fas fa-edit"></i>
                  Crear Entrada
                </a>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                  <thead>
                        <tr>
                            <th>ID</th>
                            <th>Cantidad en gramos</th>
                            <th>Fecha entrada</th>
                            <th>Tipo entrada</th>
                            <th>Observaciones</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                  <tbody>
        {% for entrada in entradas %}
            <tr>
                <td>{{ entrada.id }}</td>
                <td>{{ entrada.cantidad }}</td>
                <td>{{ entrada.fechaEntrada ? entrada.fechaEntrada|date('Y-m-d') : '' }}</td>
                <td>{{ entrada.tipoEntrada }}</td>
                <td>{{ entrada.observaciones }}</td>
                <td>
                    <a href="{{ path('entrada_show', {'id': entrada.id}) }}">show</a>
                    <a href="{{ path('entrada_edit', {'id': entrada.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Sin datos</td>
            </tr>
        {% endfor %}
                </tbody>
                  <tfoot>
                      <tr>
                          <th>ID</th>
                          <th>Cantidad en gramos</th>
                          <th>Fecha entrada</th>
                          <th>Tipo entrada</th>
                          <th>Observaciones</th>
                          <th>actions</th>
                      </tr>  
                  </tfoot>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  
  
