{% extends 'backend-base.html.twig' %}

{% block title %}Entrada{% endblock %}

{% block stylesheets %}
      {{ include('be-layout/stylesheet.html', sandboxed = true) }}
{% endblock %}

{% block body %}
<div class="wrapper">
    {{ include('be-layout/preloader.html', sandboxed = true) }}
    {{ include('be-layout/navbar.html', sandboxed = true) }}
    {{ include('be-layout/sidebar.html', sandboxed = true) }}

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <div class="d-flex justify-content-between pt-3">
            <h1>Entrada</h1>
            {{ include('entrada/_delete_form.html.twig') }}
        </div>

        <table class="table">
            <tbody>
                <tr>
                    <th>ID</th>
                    <td>{{ entrada.id }}</td>
                </tr>
                <tr>
                    <th>Cantidad en gramos</th>
                    <td>{{ entrada.cantidad }}</td>
                </tr>
                <tr>
                    <th>Fecha de entrada</th>
                    <td>{{ entrada.fechaEntrada ? entrada.fechaEntrada|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Tipo de entrada</th>
                    <td>{{ entrada.tipoEntrada }}</td>
                </tr>
                <tr>
                    <th>Observaciones</th>
                    <td>{{ entrada.observaciones }}</td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex justify-content-between">
            <a class="btn btn-secondary" href="{{ path('entrada_index') }}">Volver a la lista</a>
            <a class="btn btn-primary" href="{{ path('entrada_edit', {'id': entrada.id}) }}">Editar</a>
        </div>
    </div>

    {{ include('be-layout/footer.html', sandboxed = true) }}

    <!-- Control Sidebar -->
    <aside class="control-sidebar control-sidebar-dark">
        <!-- Control sidebar content goes here -->
    </aside>
    <!-- /.control-sidebar -->
</div>
<!-- ./wrapper -->

{{ include('be-layout/js.html', sandboxed = true) }}
{% endblock %}
