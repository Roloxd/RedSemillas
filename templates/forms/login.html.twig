{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="login__form">
    <form method="post">
        {# dump(error) #}
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
    
        {% if app.user %}
            <div class="mb-3">
                
                You are logged in as {{ app.user.email }}, <a href="{{ path('logout') }}">{{ 'logout' | trans }}</a>
            </div>
        {% endif %}
    
        <h1 class="h3 mb-3 font-weight-normal">{{ 'login' | trans }}</h1>
        <div class="rgcs__form-row">
            <!-- <label for="inputEmail">Email</label> -->
            <input type="text" name="_username" id="inputUsername" class="form-control" required autofocus placeholder="{{ 'username.email' | trans }}">
        </div>
        <div class="rgcs__form-row">
            <!-- <label for="inputPassword">Password</label> -->
            <input type="password" name="_password" id="inputPassword" class="form-control" required placeholder="{{ 'password' | trans }}">
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    
        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html
        #}
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        
    
        <button class="btn btn-lg btn-primary bubble__btn-green" type="submit">{{ 'Submit' | trans }}</button>
    </form>
</div>
{% endblock %}
