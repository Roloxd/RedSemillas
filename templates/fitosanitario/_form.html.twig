<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>{{ text_form }}</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Administración</a></li>
                    <li class="breadcrumb-item active">Fitosanitario</li>
                    </ol>
                </div>
            </div>
            <div class="d-flex justify-content-between">
                    <div></div>
                    {% if text_form == 'Editar Fitosanitario' %}
                        {{ include('fitosanitario/_delete_form.html.twig') }}
                    {% endif %}
                </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
        
            <!-- form start -->
            {{ form_start(form) }}
                <div class="row">
                    <!-- left column -->
                    <div class="col-md-6">
                        <!-- general form elements -->
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">Formulario</h3>
                            </div>
                            <!-- /.card-header -->

                            <div class="card-body">
                                <div class="form-group">
                                    <label for="fitosanitario_fecdetpat">Fecha de detección de la patología</label>
                                    <a href="#" data-toggle="tooltip" title="Fecha de detección de la patología.">?</a>
                                    {{ form_widget(form.fecdetpat, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="form-group">
                                    <label for="fitosanitario_fordet">Forma de detección de la patología</label>
                                    <a href="#" data-toggle="tooltip" title="Si se ha detectado la existencia de una patología en la muestra.">?</a>
                                    <select id="fitosanitario_fordet" name="fitosanitario[fordet][]" class="form-control select-fordet" multiple></select>
                                    <input type="hidden" id="hidden-fordet" value="{% if fitosanitario.fordet is not null %}{{ fitosanitario.fordet }}{% endif %}">
                                </div>
                                <div class="form-group">
                                    <label for="fitosanitario_metdet">Método de detección</label>
                                    <a href="#" data-toggle="tooltip" title="Método empleado para determindar la existencia de una patología en la muestra, visual, laboratorio, etc.">?</a>
                                    <select id="fitosanitario_metdet" name="fitosanitario[metdet][]" class="form-control select-metdet" multiple></select>
                                    <input type="hidden" id="hidden-metdet" value="{% if fitosanitario.metdet is not null %}{{ fitosanitario.metdet }}{% endif %}">
                                </div>
                                <div class="form-group">
                                    <label for="fitosanitario_fitpat">Fitopatología</label>
                                    <a href="#" data-toggle="tooltip" title="Tipo de fitopatología detectada.">?</a>
                                    <select id="fitosanitario_fitpat" name="fitosanitario[fitpat][]" class="form-control select-fitpat" multiple></select>
                                    <input type="hidden" id="hidden-fitpat" value="{% if fitosanitario.fitpat is not null %}{{ fitosanitario.fitpat }}{% endif %}">
                                </div>
                                <div class="form-group">
                                    <label for="fitosanitario_patdet">Pátogeno detectado</label>
                                    <a href="#" data-toggle="tooltip" title="Tipo de patógeno encontrado">?</a>
                                    <select id="fitosanitario_patdet" name="fitosanitario[patdet][]" class="form-control select-patdet" multiple></select>
                                    <input type="hidden" id="hidden-patdet" value="{% if fitosanitario.patdet is not null %}{{ fitosanitario.patdet }}{% endif %}">
                                </div>
                                <div class="form-group">
                                    <label for="fitosanitario_obs">Observaciones</label>
                                    <a href="#" data-toggle="tooltip" title="Para añadir notas o para completar datos.">?</a>
                                    {{ form_widget(form.obs, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="form-group">
                                    <label for="fitosanitario_envase">Envase</label>
                                    <a href="#" data-toggle="tooltip" title="">?</a>
                                    {{ form_widget(form.envase, {'attr': {'class': 'form-control select-envase'}}) }}
                                </div>
                                <div class="form-group">
                                    <label for="fitosanitario_entrada">Entrada</label>
                                    <a href="#" data-toggle="tooltip" title="">?</a>
                                    {# {{ form_widget(form.entrada, {'attr': {'class': 'form-control select-entrada'}}) }} #}
                                    <select id="fitosanitario_entrada" name="fitosanitario[entrada]" class="form-control select-entrada">
                                        <option></option>
                                        {% for entrada in entradas %}
                                            <option value="{{ entrada.id }}">{{ entrada.codigoEntrada }} - {{ entrada.numPasaporte }}</option>
                                        {% endfor %}
                                    </select>
                                    {% if fitosanitario.entrada is not null %}
                                        {% set entrada = fitosanitario.entrada %}
                                        <input type="hidden" id="hidden-entrada" value="{{ entrada.id }}">
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        <!-- /.card -->
                    </div>
                    <!--/.col (left) -->
                </div>
                <!-- /.row -->

                <div class="d-flex justify-content-between">
                    <a class="btn btn-secondary" href="{{ path('fitosanitario_index') }}">Volver a la lista</a>
                    <button type="submit" class="btn btn-primary">{{ button_label|default('Guardar') }}</button>
                </div>
            {{ form_end(form) }}

        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->

    

</div>
<!-- /.content-wrapper -->
