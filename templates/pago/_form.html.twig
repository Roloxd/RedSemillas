<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>{{ text_form }}</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Administración</a></li>
              <li class="breadcrumb-item active">Pago</li>
            </ol>
          </div>
        </div>
        <div class="d-flex justify-content-between">
          <div>
            <!-- Button modal -->
            <a class="btn btn-primary" href="#ancla-pago">Datos de pago</a>
          </div>
          {% if text_form == 'Editar Pago' %}
            {{ include('pago/_delete_form.html.twig') }}
          {% endif %}
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      {{ form_start(form) }}
      {% if text_form == 'Editar Pago' %}
      <div class="mb-3">
        <button class="btn btn-primary">{{ button_label|default('Guardar') }}</button>
      </div>
      {% endif %}
      <div class="container-fluid">
        <div class="row">
          <!-- left column -->
          <div class="col-md-6">
              <!-- general form elements -->
              <div class="card card-primary">
                  <div class="card-header">
                      <h3 id="ancla-pago" class="card-title">Datos de pago</h3>
                      <div class="card-tools">
                          <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                              <i class="fas fa-minus"></i>
                          </button>
                      </div>
                  </div>
                  <!-- /.card-header -->
                  <!-- form start -->
                  <div class="card-body">
                      <div class="form-group">
                          <label for="pago_fechaRenovacion">Fecha de renovación</label>
                          {{ form_widget(form.fechaRenovacion, {'attr': {'class': 'form-control'}}) }}
                      </div>
                      <div class="form-group">
                          <label for="pago_fechaPago">Fecha del pago</label>
                          {{ form_widget(form.fechaPago, {'attr': {'class': 'form-control'}}) }}
                      </div>
                      <div class="form-group">
                          <label for="pago_persona">Persona a pagar:</label>
                          {{ form_widget(form.persona, {'attr': {'class': 'form-control'}}) }}
                      </div>
                  </div>
                  <!-- /.card-body -->
              </div>
              <!-- /.card -->
          </div>
        </div>
        <!-- /.row -->
      </div><!-- /.container-fluid -->
      <div class="d-flex justify-content-between">
        <a class="btn btn-secondary" href="{{ path('pago_index') }}">Volver a la lista</a>
        <button class="btn btn-primary">{{ button_label|default('Guardar') }}</button>
      </div>
      {{ form_end(form) }}  
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

