                        <td>{{ ciclo_y_siembra.id }}</td>
                        <td>{{ ciclo_y_siembra.altitud }}</td>
                        <td>{{ ciclo_y_siembra.zona }}</td>
                        <td>{{ ciclo_y_siembra.coordenadas }}</td>
                        <td>{{ ciclo_y_siembra.ciclo }}</td>
                        <td>{{ ciclo_y_siembra.enero }}</td>
                        <td>{{ ciclo_y_siembra.febrero }}</td>
                        <td>{{ ciclo_y_siembra.marzo }}</td>
                        <td>{{ ciclo_y_siembra.abril }}</td>
                        <td>{{ ciclo_y_siembra.mayo }}</td>
                        <td>{{ ciclo_y_siembra.junio }}</td>
                        <td>{{ ciclo_y_siembra.julio }}</td>
                        <td>{{ ciclo_y_siembra.agosto }}</td>
                        <td>{{ ciclo_y_siembra.septiembre }}</td>
                        <td>{{ ciclo_y_siembra.octubre }}</td>
                        <td>{{ ciclo_y_siembra.noviembre }}</td>
                        <td>{{ ciclo_y_siembra.diciembre }}</td>
                        <td>
                            <a href="{{ path('ciclo_y_siembra_show', {'id': ciclo_y_siembra.id}) }}">show</a>
                            <a href="{{ path('ciclo_y_siembra_edit', {'id': ciclo_y_siembra.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
