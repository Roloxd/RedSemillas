<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>{{ text_form }}</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Administración</a></li>
              <li class="breadcrumb-item active">Mejorador/a</li>
            </ol>
          </div>
        </div>
        <div class="d-flex justify-content-between">
          <div>
            <!-- Button modal -->
            <a class="btn btn-primary" href="#ancla-mejora">Ir a Mejorador/a</a>
          </div>
          {% if text_form == 'Editar Pago' %}
            {{ include('pago/_delete_form.html.twig') }}
          {% endif %}
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      {{ form_start(form) }}
      {% if text_form == 'Editar Pago' %}
      <div class="mb-3">
        <button class="btn btn-primary">{{ button_label|default('Guardar') }}</button>
      </div>
      {% endif %}
      <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 id="ancla-mejora" class="card-title">Mejorador/a</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <div class="card-body">
                        <div class="form-group">
                            <label for="mejoras_metodoMejora">Método de Mejora</label>
                            <a href="#" data-toggle="tooltip" title="">?</a>
                            {{ form_widget(form.metodoMejora, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            <label for="mejoras_descripcionProcedimiento">Descripción procedimiento</label>
                            <a href="#" data-toggle="tooltip" title="">?</a>
                            {{ form_widget(form.descripcionProcedimiento, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            <label for="mejoras_imagenesProceso">Imagenes del proceso</label>
                            <a href="#" data-toggle="tooltip" title="">?</a>
                            {{ form_widget(form.imagenesProceso, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            <label for="mejoras_observaciones">Observaciones</label>
                            <a href="#" data-toggle="tooltip" title="">?</a>
                            {{ form_widget(form.observaciones, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            <label for="mejoras_instituciones">Instituciones</label>
                            <a href="#" data-toggle="tooltip" title="">?</a>
                            {{ form_widget(form.instituciones, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            <label for="mejoras_personas">Personas</label>
                            <a href="#" data-toggle="tooltip" title="">?</a>
                            {{ form_widget(form.personas, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            <label for="mejoras_entrada">Entrada</label>
                            <a href="#" data-toggle="tooltip" title="">?</a>
                            {{ form_widget(form.entrada, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    <!-- /.card-body -->
                    </div>
                <!-- /.card -->
            </div>
        </div>
        <!-- /.row -->
      </div><!-- /.container-fluid -->
      <div class="d-flex justify-content-between">
        <a class="btn btn-secondary" href="{{ path('pago_index') }}">Volver a la lista</a>
        <button class="btn btn-primary">{{ button_label|default('Guardar') }}</button>
      </div>
      {{ form_end(form) }}  
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
