{% extends 'backend-base.html.twig' %}

{% block title %}Imagen{% endblock %}

{% block stylesheets %}
      {{ include('be-layout/stylesheet-tabla.html', sandboxed = true) }}
{% endblock %}

{% block body %}
<div class="wrapper">
 {{ include('be-layout/preloader.html', sandboxed = true) }}

  {{ include('be-layout/navbar.html', sandboxed = true) }}
  
  {{ include('be-layout/sidebar.html', sandboxed = true) }}
  
<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Imagen</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Imagen</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Tabla de Imagenes</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                  <thead>
                    <tr>
                        <th>Id</th>
                        <th>Url</th>
                        <th>Titulo</th>
                        <th>Credito</th>
                        <th>Principal</th>
                        <th>actions</th>
                    </tr>   
                  </thead>
                <tbody>
                {% for imagen in imagens %}
                    <tr>
                        <td>{{ imagen.id }}</td>
                        <td><img src="/uploads/img/{{ imagen.url }}" class="img-fluid rounded mh-150" /></td>
                        <td>{{ imagen.titulo }}</td>
                        <td>{{ imagen.credito }}</td>
                        <td>{{ imagen.principal }}</td>
                        <td>
                            <a href="{{ path('imagen_show', {'id': imagen.id}) }}">show</a>
                            <a href="{{ path('imagen_edit', {'id': imagen.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                <tr>
                    <td colspan="4">No hay registros</td>
                </tr>
                {% endfor %}
                    </tbody>
                        <tfoot>
                            <tr>
                                <th>Id</th>
                                <th>Url</th>
                                <th>Titulo</th>
                                <th>Credito</th>
                                <th>Principal</th>
                                <th>actions</th>
                            </tr>   
                        </tfoot>
                    </table>
                </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  
  
  {{ include('be-layout/footer.html', sandboxed = true) }}

  <!-- Control Sidebar -->
  <aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
  </aside>
  <!-- /.control-sidebar -->
</div>
<!-- ./wrapper -->

