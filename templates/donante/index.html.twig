{% extends 'backend-base.html.twig' %}

{% block title %}Donante{% endblock %}

{% block stylesheets %}
      {{ include('be-layout/stylesheet-tabla.html', sandboxed = true) }}
{% endblock %}

{% block body %}
<div class="wrapper">
 {{ include('be-layout/preloader.html', sandboxed = true) }}

  {{ include('be-layout/navbar.html', sandboxed = true) }}
  
  {{ include('be-layout/sidebar.html', sandboxed = true) }}
  

<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Donante</h1>
        </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Imagen</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Tabla de Donantes</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tipo de donante</th>
                            <th>Codigo instituto</th>
                            <th>Proyecto</th>
                            <th>Num accesion donante</th>
                            <th>Observaciones</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for donante in donantes %}
                        <tr>
                            <td>{{ donante.id }}</td>
                            <td>{{ donante.tipoDonante }}</td>
                            <td>{{ donante.instcode }}</td>
                            <td>{{ donante.proyecto }}</td>
                            <td>{{ donante.numAccesionDonante }}</td>
                            <td>{{ donante.observaciones }}</td>
                            <td>
                                <a href="{{ path('donante_show', {'id': donante.id}) }}">show</a>
                                <a href="{{ path('donante_edit', {'id': donante.id}) }}">edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="11">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Tipo de donante</th>
                            <th>Codigo instituto</th>
                            <th>Proyecto</th>
                            <th>Num accesion donante</th>
                            <th>Observaciones</th>
                            <th>actions</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->
</div>

    <a href="{{ path('donante_new') }}">Create new</a>
</section>
<!-- /.content -->
</div>
<!-- /.content-wrapper -->

